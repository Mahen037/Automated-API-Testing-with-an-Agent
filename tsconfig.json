{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "types": [
      "node",
      "playwright"
    ],
    "esModuleInterop": true,
    "allowJs": false,
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    ".api-tests/tests/**/*.ts",
    "playwright.config.ts"
  ]
}
